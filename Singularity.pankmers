Bootstrap:docker://
From:continuumio/miniconda3

%files
    pankmers.yml


%environment
    PATH=/opt/conda/envs/edta/bin:$PATH

%post
    echo ". /opt/conda/etc/profile.d/conda.sh" >> ~/.bashrc
    echo "source activate pankmers" > ~/.bashrc
    /opt/conda/bin/conda env create -f pankmers.yml -n pankmers

%runscript
    exec "$@"

